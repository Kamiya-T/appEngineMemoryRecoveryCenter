<span id="hidbtn" style="display: initial">\
		<<button "投票する">><<script>>
			$('#hidbtn').css('display', 'none');
			$('#sacDecision').css('display', 'none');
			TwineGang.clickButton(3);
			setup.passageGoNumber[3]++;
			let sacrinum = 3;
			switch (State.variables.sacrifice) {
				case 'ヒダマリ':
					sacrinum = 0;
					break;
				case 'フシグモ':
					sacrinum = 1;
					break;
				case 'ミン':
					sacrinum = 2;
					break;
			}
			TwineGang.sendSacrifice(sacrinum);
			setup.sacrifice[sacrinum]++
			$("#passageGoCheck").text(setup.passageGoNumber[3]+" / "+setup.memberNumber);
		<</script>><</button>>
</span>\
